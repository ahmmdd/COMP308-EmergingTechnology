<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <br>
          <h3>Games List</h3>

          <a class="btn btn-primary" href="/games/add"><i class="fa fa-plus"></i> Add a Game</a>
          <table class="table table-striped table-hover table-bordered">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Cost</th>
              <th class="text-center">Rating</th>
              <th></th>
              <th></th>
            </tr>
            <% for (let count = 0; count < games.length; count++) { %>
              <tr> <!-- Row Template -->
                <td class="text-center"><%= games[count].name %></td>
                <td class="text-center"><%= games[count].cost %></td>
                <td class="text-center"><%= games[count].rating %></td>
                <td class="text-center"><a class="btn btn-primary" href="/games/<%= games[count]._id %>" role="button"><i class="fa fa-pencil-square-o"></i> Edit</a></td>
                <td class="text-center"><a class="btn btn-danger" href="/games/delete/<%= games[count]._id %>" role="button"><i class="fa fa-trash-o"></i> Delete</a></td>
              </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


